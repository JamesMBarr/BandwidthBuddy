{
  "compilerOptions": {
    "target": "es2016",

    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"],
      "@shared/*": ["../shared/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
